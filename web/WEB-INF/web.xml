<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>UserLoginServlet</servlet-name>
        <servlet-class>webapp.UserLoginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>UserLoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
        <url-pattern></url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>/MainPageServlet</servlet-name>
        <servlet-class>webapp.MainPageServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>/MainPageServlet</servlet-name>
        <url-pattern>/mainPage</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>/AddNewCaseServlet</servlet-name>
        <servlet-class>webapp.AddNewCaseServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>/AddNewCaseServlet</servlet-name>
        <url-pattern>/addCase</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>/DeleteCaseServlet</servlet-name>
        <servlet-class>webapp.DeleteCaseServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>/DeleteCaseServlet</servlet-name>
        <url-pattern>/deleteCase</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>/AllCasesServlet</servlet-name>
        <servlet-class>webapp.AllCasesServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>/AllCasesServlet</servlet-name>
        <url-pattern>/allCases</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>/EditCaseDetailsServlet</servlet-name>
        <servlet-class>webapp.EditCaseDetailsServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>/EditCaseDetailsServlet</servlet-name>
        <url-pattern>/editCase</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>/AllFilesServlet</servlet-name>
        <servlet-class>webapp.AllFilesServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>/AllFilesServlet</servlet-name>
        <url-pattern>/files</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>/UploadFileServlet</servlet-name>
        <servlet-class>webapp.UploadFileServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>/UploadFileServlet</servlet-name>
        <url-pattern>/uploadFile</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>/DownloadFileServlet</servlet-name>
        <servlet-class>webapp.DownloadFileServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>/DownloadFileServlet</servlet-name>
        <url-pattern>/downloadFile</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>/DeleteFileServlet</servlet-name>
        <servlet-class>webapp.DeleteFileServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>/DeleteFileServlet</servlet-name>
        <url-pattern>/deleteFile</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>/UserLogoutServlet</servlet-name>
        <servlet-class>webapp.UserLogoutServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>/UserLogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>view/login.jsp</welcome-file>
    </welcome-file-list>

    <error-page>
        <error-code>500</error-code>
        <location>/view/500page.jsp</location>
    </error-page>

    <!--<error-page>-->
        <!--<error-code>404</error-code>-->
        <!--<location>/view/404page.jsp</location>-->
    <!--</error-page>-->

</web-app>